<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211D44"
    tools:context=".MentalHealthActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgmentalhealth" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="127dp"
                    android:layout_height="148dp"
                    android:src="@drawable/tb_coupletherapy"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="251dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="127dp"
                    android:layout_height="148dp"
                    android:src="@drawable/tb_meditation"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="251dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="127dp"
                    android:layout_height="148dp"
                    android:src="@drawable/tb_mentaldisorder"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="251dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="127dp"
                    android:layout_height="148dp"
                    android:src="@drawable/tb_procrastination"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="251dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="127dp"
                    android:layout_height="148dp"
                    android:src="@drawable/tb_anorexia"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="251dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="127dp"
                    android:layout_height="148dp"
                    android:src="@drawable/tb_burnout"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="251dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="127dp"
                    android:layout_height="148dp"
                    android:src="@drawable/tb_psychosis"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="251dp" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Information about treatments"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>